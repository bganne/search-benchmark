LIBRARY = libxdr.a

SRCS =	\
	xdr_array.c \
	xdr.c \
	xdr_float.c \
	xdr_mem.c \
	xdr_rec.c \
	xdr_reference.c \
	xdr_stdio.c

OBJS = $(SRCS:.c=.o)

ROOT = ..

ARFLAGS = rv
#CC = gcc
#CFLAGS = -g -O -ansi -pedantic -Wall
CC = cc
CFLAGS = -g -Xa
CPPFLAGS = \
	-I$(ROOT)/include
RANLIB = ranlib
RM = rm -f

all::	$(LIBRARY)

$(LIBRARY): $(OBJS)
	$(RM) $@
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

clean::
	-$(RM) $(OBJS) $(LIBRARY)
